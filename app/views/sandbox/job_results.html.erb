<div class="col-md-9">
<div class="page-header">
	<h2>Total <%=@job_results["query"] %>jobs<small>in <%=@job_results["location"] %>is<%=@job_results["totalResults"]%></small></h2>


<table class="table table-stripped" id="myTable" >
<thead>
	<tr>
		<th>Title</th>
		<th>Company</th>
		<th>City</th>
		<th>Source</th>
		<th>Snippet</th>
	</tr>
</thead>
<tbody>
<% @job_results["results"].each do |result|%>
	<tr>
	<td><%= link_to result["jobtitle"] ,result["url"],target: "_blank"%></td>
	<td><%=result["company"]%></td>
	<td><%=result["city"]%></td>
	<td><%=result["source"]%></td>
	<td><%=raw(result["snippet"])%></td>
	</tr>
	<% end %>
	</tbody>
</table>
</div>


<div class="col-md-4">
	<div class="page-header">
		<h3>Search</h3>
	</div>
	<%=form_tag(sandbox_job_results_path,method: :get) do %>

	<div class="form-group">
	<lable>Technology:</lable><br/>
	<%=text_field_tag :technology %>
	</div>
	<br/>

	<div class="form-group">
	<lable>Location:</lable><br/>
	<%=text_field_tag :location %>
	</div>

	<%=submit_tag "search",class: "btn btn-primary" %>

	<%end%>
</div>	


