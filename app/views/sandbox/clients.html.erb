<h1>Total Clients :<%=@clients.size %></h1>
<% last_client = Client.last %>

<% if last_client.projects.empty?%>
 <h3>No projects found,Add your first project</h3>
 <% else %>
 <ul>
 	<b> Total Projects : <%=last_client.projects.size%>
 	<% last_client.projects.each do |project|%>
 		<li><%=project.name%></li>
 		<%end%>
</ul>
<%end%>		




<%@clients.each do |client|%>
	<h3><%=client.details.html_safe%></h3>
	<ul>
	<%client.list_projects.each do |project|%>
	<li><%=project.name%></li>
	<%end%>
	</ul>
	<%end%>
	<hr/>




<ol>
	<% @clients.each do |client|%>
		<li>name -<%= client.name %>,company -         <%=client.company %>,mobile -              <%=client.mobile %>,
			
		</li>
	<% end %>
</ol>		

<!--<p>Find me in app/views/sandbox/clients.html.erb</p>-->
<table border ="1">
	<thead>
		<tr>
			<th>#</th>
			<th>Name</th>
			<th>Companny</th>
			<th>Mobile</th>
			<th>Email</th>
			
		</tr>
	</thead>
	<tbody>
		<%@clients.each_with_index do|client,index| %>
		<tr>
			<td><%=index+1%></td>
			<td><%=client.name.capitalize %></td>
			<td><%=client.company.capitalize %></td>
			<td><%=client.mobile%></td>
			<td><%=client.email%></td>
			
		</tr>
		<%end%>	
	</tbody>
</table>

<h3>Client details</h3>
<p>Name - <%=@client.name %></p>
<p>Company - <%=@client.company %></p>

<h3>Client by id 1 & 3</h3>
<ol>
	<% for client in @clients_by_id %>
		<li><%=client.name %></li>
	<%end%>
</ol>		
	

